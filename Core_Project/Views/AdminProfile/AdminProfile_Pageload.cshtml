@model Core_Project.Models.AdminCls;
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    body {
        background: linear-gradient(135deg, #eef3ff, #ffffff);
    }

    .card-custom {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border-radius: 12px;
    }

        .card-custom:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15);
        }

    .fade-in {
        animation: fadeIn 0.8s ease;
    }

    @* ESCAPE THE @ SIGN *@
    @@keyframes fadeIn{
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>


<div class="container mt-5">
    <h2 class="text-center mb-2">Welcome, Admin 👋</h2>
    <p class="text-center text-muted mb-5">Manage mechanics and view all service bookings.</p>

    <div class="row justify-content-center">
        <!-- Mechanics -->
        <div class="col-md-4 fade-in">
            <div class="card card-custom p-4 shadow-sm">
                <h4 class="text-center mb-3">
                    <i class="bi bi-tools"></i> Mechanics
                </h4>

                <button onclick="location.href='@Url.Action("AddMechanic", "AdminProfile")'"
                        class="btn btn-primary w-100 mb-2">
                    Add Mechanic
                </button>

                <button onclick="location.href='@Url.Action("ViewMechanic", "AdminProfile")'"
                        class="btn btn-outline-primary w-100">
                    View Mechanics
                </button>

                <div class="card-footer text-muted text-center mt-3">
                    Manage all mechanic details
                </div>
            </div>
        </div>

        <!-- User Bookings -->
        <div class="col-md-4 fade-in">
            <div class="card card-custom p-4 shadow-sm">
                <h4 class="text-center mb-3">
                    <i class="bi bi-clipboard-check"></i> User Bookings
                </h4>

                <button onclick="location.href='@Url.Action("ListAdminServices", "AdminProfile")'"
                        class="btn btn-primary w-100 mb-2">
                    View All Bookings
                </button>

                <div class="card-footer text-muted text-center mt-3">
                    Monitor user service activity
                </div>
            </div>
        </div>
    </div>
</div>

