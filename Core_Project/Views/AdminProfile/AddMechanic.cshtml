@model Core_Project.Models.MechanicCls;

<style>
    .form-container {
        width: 400px;
        margin: 50px auto; /* centers the form */
        padding: 30px;
        background-color: #fff;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        border-radius: 8px;
    }

        .form-container h2 {
            text-align: center;
            margin-bottom: 20px;
        }

    .form-group {
        margin-bottom: 15px;
    }

    .btn {
        width: 100%;
    }
</style>

<form asp-action="AddMechanic" class="form-horizontal" method="post">
    <div class="form-container">
        <h2>Add Mechanic</h2>
    <div class="form-group">
        <label class="control-label">Name</label>
        <input asp-for="name" class="form-control" id="t1" style="width:150px;" />
    </div>
    <div class="form-group">
        <label class="control-label">Phone Number</label>
        <input asp-for="phone" class="form-control" id="t2" style="width:150px;" />
    </div>
    <div class="form-group">
        <label class="control-label">Specialisation</label>
        <select asp-for="spec" class="form-control" id="t3" style="width:250px;">
            <option value="">-- Select Service Type --</option>
            <option>Engine</option>
            <option>Brake</option>
            <option>Electrical</option>
            <option>AC Service</option>
            <option>Suspension</option>
            <option>General Service</option>
        </select>
    </div>
    <div class="form-group">
        <label class="control-label">Experience</label>
        <input asp-for="exp" class="form-control" id="t4" style="width:150px;" />
    </div>
    <div class="form-group mt-4">@* 
        <input type="submit" value="Add" class="btn btn-success" /> *@
            <button type="submit" class="btn btn-primary btn-add">ADD</button>
    </div>
    </div>
</form>
@{
    if (@TempData["msg"] != null)
    {
        <script>
            alert('@TempData["msg"]');
            document.getElementById('t1').value="";
            document.getElementById('t2').value="";
            document.getElementById('t3').value="";
            document.getElementById('t4').value="";
        </script>
    }
}